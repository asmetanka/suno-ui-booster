{
  "manifest_version": 3,
  "name": "Suno UI Booster",
  "version": "1.2",
  "description": "Cleaner Suno UI: onâ€‘track Trash button, bigger player controls, square covers, quick toggle. Works only on Suno.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.suno.ai/*",
    "*://*.suno.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.suno.ai/*",
        "*://*.suno.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["*://*.suno.ai/*", "*://*.suno.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Suno UI Booster - Enhanced Interface"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}