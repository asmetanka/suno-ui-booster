{
  "manifest_version": 3,
  "name": "Suno UI Booster",
  "version": "1.2",
  "description": "Enhanced interface for Suno.ai with smart trash button, square album previews and optimized design. Adapts to different pages and waits for complete resource loading.",
  "permissions": [
    "scripting",
    "activeTab",
    "declarativeNetRequest",
    "storage"
  ],
  "host_permissions": [
    "*://*.suno.ai/*",
    "*://*.suno.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.suno.ai/*",
        "*://*.suno.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["*://*.suno.ai/*", "*://*.suno.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Suno UI Booster - Enhanced Interface"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}